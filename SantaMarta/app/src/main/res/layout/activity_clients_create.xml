<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mask="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/fondo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:text="Codigo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_code" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:digits="qwertyuiopasdfghjklñzxcvbnm0123456789QWERTYUIOPASDFGHJKLÑZXCVBNM"
            android:hint="Codigo"
            android:maxLength="20"
            android:ems="10"
            android:id="@+id/txt_code" />

        <TextView
            android:text="Nombre:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:digits="qwertyuiopasdfghjklñzxcvbnmQWERTYUIOPASDFGHJKLÑZXCVBNM "
            android:hint="Nombre"
            android:maxLength="30"
            android:ems="10"
            android:id="@+id/txt_Name" />

        <TextView
            android:text="Primer Apellido:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_firstName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:digits="qwertyuiopasdfghjklñzxcvbnmQWERTYUIOPASDFGHJKLÑZXCVBNM "
            android:hint="Primer Apellido"
            android:maxLength="15"
            android:ems="10"
            android:id="@+id/txt_firstName" />

        <TextView
            android:text="Segundo Apellido:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_secondName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:digits="qwertyuiopasdfghjklñzxcvbnmQWERTYUIOPASDFGHJKLÑZXCVBNM "
            android:hint="Segundo Apellido"
            android:maxLength="15"
            android:ems="10"
            android:id="@+id/txt_secondName" />

        <TextView
            android:text="Nombre de Empresa:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_nameCompany" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:digits="qwertyuiopasdfghjklñzxcvbnm0123456789QWERTYUIOPASDFGHJKLÑZXCVBNM "
            android:hint="Nombre de Empresa"
            android:maxLength="40"
            android:ems="10"
            android:id="@+id/txt_nameCompany" />
        <TextView
            android:text="Telefono:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_phone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"
            android:inputType="phone"
            android:maxLength="9"
            android:ems="10"
            android:id="@+id/txt_phone" />

        <TextView
            android:id="@+id/txtv_cellPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular:" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Celular"
            android:inputType="phone"
            android:ems="10"
            android:maxLength="9"
            android:id="@+id/txt_cellPhone"
            mask:mask="+7(###)###-##-##"
            mask:keep_hint="false" />
        <TextView
            android:text="Correo:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:digits="qwertyuiopasdfghjklñzxcvbnm0123456789@.QWERTYUIOPASDFGHJKLÑZXCVBNM"
            android:hint="Correo"
            android:ems="10"
            android:maxLength="40"
            android:id="@+id/txt_email" />
        <TextView
            android:text="Direccion:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_address"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Direccion"
            android:inputType="textMultiLine"
            android:digits="qwertyuiopasdfghjklñzxcvbnm0123456789 QWERTYUIOPASDFGHJKLÑZXCVBNM"
            android:ems="10"
            android:maxLength="70"
            android:id="@+id/txt_address" />

        <Button
            android:id="@+id/btn_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_border"
            android:text="Ingresar"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="@drawable/custom_button_border"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px" >
            <requestFocus />
        </LinearLayout>
    </LinearLayout>
</ScrollView>