@model SantaMarta.Data.Store_Procedures.Views_Invoinces_Details
@{
    Layout = null;
    ViewBag.Title = "Detalles";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h3 class="modal-title" id="myModalLabel">Información de la factura</h3>
</div>
<div class="modal-body">
    <div class="box-body">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <label> Fecha: </label>
                @Html.DisplayFor(model => model.Date)
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <label> N. Documento: </label>
                @Html.DisplayFor(model => model.Code)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label>Cliente:</label>
                @Html.DisplayFor(model => model.Name)
                @Html.DisplayFor(model => model.FirstName)
                @Html.DisplayFor(model => model.SecondName)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label>Nombre de Negocio:</label>
                @Html.DisplayFor(model => model.NameCompany)
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Productos</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <div class="box-body">
                <table id="table1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>IVA</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                <td> @Html.DisplayFor(modelItem => item.Name)</td>
                                <td> @Html.DisplayFor(modelItem => item.Price)</td>
                                <td> @Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td> @Html.DisplayFor(modelItem => item.Tax)</td>
                                <td> @Html.DisplayFor(modelItem => item.Total)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Abonos</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Codigo</th>
                            <th>Abono</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AssetsLiabilities)
                        {
                            <tr>
                                <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CurrentDate))</td>
                                <td> @Html.DisplayFor(modelItem => item.Code)</td>
                                <td> @Html.DisplayFor(modelItem => item.Rode)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pull-right">
                <label>Total:</label>
                @Html.DisplayFor(model => model.Total)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pull-right">
                <label>Abonos:</label>
                @Html.DisplayFor(model => model.Payments)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pull-right">
                <label>Saldo:</label>
                @Html.DisplayFor(model => model.Residue)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
    </div>
</div>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
