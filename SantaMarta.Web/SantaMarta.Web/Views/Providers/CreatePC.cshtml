@model SantaMarta.Data.Models.Providers.Providers
@{
    Layout = null;
    ViewBag.Title = "Delete";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Agregar a Cliente</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("CreatePC", "Providers", null, new AjaxOptions
    {
        Url = Url.Action("CreatePC", "Providers"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalCreatePC",
        InsertionMode = InsertionMode.Replace

    },
                                                                      new { @class = "form-horizontal", role = "form", id = "frmDelete" }))
    {
        @Html.AntiForgeryToken()
        <div class="box-body">
            <p>Está seguro que desea que este proveedor sea cliente?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            <input id="btnCreate" type="submit" value="Guardar" class="btn btn-success" />
        </div>
    }
</div>
