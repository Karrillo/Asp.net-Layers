@model SantaMarta.Data.Store_Procedures.All_Providers
@{
    Layout = null;
    ViewBag.Title = "Edit";
}
@*modal*@
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Modificar Proveedor</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Edit", "Providers", null, new AjaxOptions
    {

        HttpMethod = "POST",
        Url = Url.Action("Edit", "Providers"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalEdit",
        InsertionMode = InsertionMode.Replace

    },
                        new { @class = "form-horizontal", role = "form", id = "frmEdit" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        //textbox
        <div class="box-body">
            Identicacion:
            @Html.EditorFor(model => model.identification, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Identificacion" } })
            @Html.ValidationMessageFor(model => model.identification, "", new { @class = "text-danger" })
            <br>
            Nombre(s):
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Nombre" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <br>
            Primer Apellido:
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Primer Apellido" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            <br>
            Segundo Apellido:
            @Html.EditorFor(model => model.SecondName, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Segundo Apellido" } })
            @Html.ValidationMessageFor(model => model.SecondName, "", new { @class = "text-danger" })
            <br>
            Nombre de Negocio:
            @Html.EditorFor(model => model.NameCompany, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Nombre del Negocio" } })
            @Html.ValidationMessageFor(model => model.NameCompany, "", new { @class = "text-danger" })
            <br>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-mobile-phone"></i></span>
                @Html.EditorFor(model => model.CellPhone, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Celular" } })
            </div>
            @Html.ValidationMessageFor(model => model.CellPhone, "", new { @class = "text-danger" })
            <br>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Telefono" } })
            </div>
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            <br>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Correo" } })
            </div>
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <br>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-safari"></i></span>
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Direccion" } })
            </div>
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>@*botones*@
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <input id="btnCreate" type="submit" value="Guardar" class="btn btn-success" />
        </div>
    }
</div>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
