@model SantaMarta.Data.Models.Providers.Providers
@{
    Layout = null;
    ViewBag.Title = "Restore";
}
@*modal*@
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Restaurar Proveedor</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Restore", "Providers", null, new AjaxOptions
    {
        Url = Url.Action("Restore", "Providers"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalRestore",
        InsertionMode = InsertionMode.Replace
    },
        new { @class = "form-horizontal", role = "form", id = "frmRestore" }))
    {

        @Html.AntiForgeryToken()
        //textbox
        <div class="box-body">
            <p>Estas seguro de restaurar este proveedor?</p>
        </div>@*botones*@
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <input id="btnCreate" type="submit" value="Restaurar" class="btn btn-success" />
        </div>
    }
</div>

