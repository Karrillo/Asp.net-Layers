@model IEnumerable<SantaMarta.Data.Store_Procedures.All_Providers>
@{
    ViewBag.Title = "Proveedores";
}
@section Menu {
    @Scripts.Render("~/scripts/Tables/Data/menu")
}
@Styles.Render("~/AdminPacket/plugins/datatables/css")
@if (Session["Nickname"] == null)
{
    Response.Redirect("~/Login/Index");

}

@*Boton ingresar nuevo*@
<div class="box-header">
    <a class="btn btn-success btn-lg pull-right" data-target="#modal-crear" data-toggle="modal" href="/Providers/Create">
        <span class="glyphicon glyphicon-plus"></span> Nuevo Proveedor
    </a>
</div>
@*Table*@
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Lista de Clientes</h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Primer Apellido</th>
                        <th>Segundo Apellido</th>
                        <th>Nombre(s)</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @*lista de clientes*@
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.SecondName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.CellPhone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    @if (Session["Type"] != null)
                                    {
                                        @*Boton Editar*@
                                        <a class="btn btn-primary glyphicon glyphicon-edit" data-target="#modal-editar" data-toggle="modal" href="@Url.Action("Edit", "Providers", new { id = item.IDPerson })"></a>
                                        @*Boton Borrar*@
                                        <a class="btn btn-danger glyphicon glyphicon-trash" data-target="#modal-editar" data-toggle="modal" href="@Url.Action("Delete", "Providers", new { id = item.IDPerson })"></a>
                                    }
                                    <a class="btn btn-info glyphicon glyphicon-file" data-target="#modal-details" data-toggle="modal" href="@Url.Action("Details", "Providers", new { id = item.IDPerson })"></a>
                                    <a class="btn btn-warning glyphicon glyphicon-plus" data-target="#modal-details" data-toggle="modal" href="@Url.Action("CreatePC", "Providers", new { id = item.IDProvider })"></a>
                                </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Primer Apellido</th>
                        <th>Segundo Apellido</th>
                        <th>Nombre(s)</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
