        function closeModalCreateCP(data) {
            if (data.success) {
                $('#modal-createCP').modal('hide');
                window.location.href = "/Clients/Index";
            } else {
                toastr.warning('No se ejecutó la operación, hubo un error', 'Atención');
            }
        }
</script>
