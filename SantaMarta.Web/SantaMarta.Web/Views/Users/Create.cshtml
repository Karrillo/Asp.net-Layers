@model SantaMarta.Data.Models.Users.Users

@{
    Layout = null;
    ViewBag.Title = "Create";
}

@*modal*@
<div style="padding: 20px 30px; background: #00a65a; z-index: 999999; font-size: 16px; font-weight: 600;" class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Nuevo Usuario</h4>
</div>

<div class="modal-body">

    @using (Ajax.BeginForm("Create", "Users", null, new AjaxOptions
    {
        HttpMethod = "POST",
        Url = Url.Action("Create", "Users"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalCreate",
        InsertionMode = InsertionMode.Replace
    },
        new { @class = "form-horizontal", role = "form", id = "frmCrear" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        //textbox
        <div class="box-body">
            @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Usuario" } })
            @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
            <br>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Contraseña" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <br>
            <div class="form-group">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Type)
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>@*botones*@
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            <input id="btnCreate" type="submit" value="Guardar" class="btn btn-success" />
        </div>
    }
</div>