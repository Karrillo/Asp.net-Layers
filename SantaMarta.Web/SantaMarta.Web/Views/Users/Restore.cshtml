@model SantaMarta.Data.Models.Users.Users
@{
    Layout = null;
    ViewBag.Title = "Delete";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Restaurar Usuario</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Restore", "Users", null, new AjaxOptions
    {

        //HttpMethod = "POST",
        Url = Url.Action("Restore", "Users"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalRestore",
        InsertionMode = InsertionMode.Replace

    },
                        new { @class = "form-horizontal", role = "form", id = "frmRestore" }))
    {

        @Html.AntiForgeryToken()
        //textbox
        <div class="box-body">
            <p>Estas seguro de restaurar este usuario?</p>
        </div>@*botones*@
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <input id="btnCreate" type="submit" value="Restaurar" class="btn btn-success" />
        </div>
    }
</div>
