@model SantaMarta.Data.Models.Categories.Categories
@{
    Layout = null;
    ViewBag.Title = "Delete";
}
@*modal*@
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h3 class="modal-title" id="myModalLabel">Borrar Categoria</h3>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Delete", "Categories", null, new AjaxOptions
    {

        HttpMethod = "POST",
        Url = Url.Action("Delete", "Categories"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalDeleteCategory",
        InsertionMode = InsertionMode.Replace

    },
                                  new { @class = "form-horizontal", role = "form", id = "frmDelete" }))
    {

        @Html.AntiForgeryToken()
        //textbox
        <div class="box-body">
            <p>Estas seguro de borrar esta categoria?</p>
        </div>@*botones*@
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <input id="btnCreate" type="submit" value="Borrar" class="btn btn-danger" />
        </div>
    }
</div>
