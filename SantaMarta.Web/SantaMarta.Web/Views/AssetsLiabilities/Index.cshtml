<script>
    function closeModalCreate(data) {
        if (data.success) {
            $('#modal-crear').modal('hide');
            window.location.href = "/AssetsLiabilities/Index";
        }
    }
</script>

<script>
    function closeModalEdit(data) {
        if (data.success) {
            $('#modal-editar').modal('hide');
            window.location.href = "/AssetsLiabilities/Index";
