<link href="~/Scripts/Daterangepicker/daterangepicker.min.css" rel="stylesheet" />


@if (Session["Nickname"] == null)
{
    Response.Redirect("~/Login/Index");

}


@using (Html.BeginForm("Index", "AssetsLiabilities", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-2 col-xs-6">
            @*@Html.TextBox("Fecha", null, new { id = "reservation", @class = "form-control pull-right" })*@
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                <input type="text" class="form-control" name="value_from_start_date" data-datepicker="separateRange" placeholder="YYYY/MM/DD"/>
            </div>
        </div>
       
        <div class="col-lg-2 col-xs-6">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                <input type="text" class="form-control" name="value_from_end_date" data-datepicker="separateRange" placeholder="YYYY/MM/DD"/>
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-success ion ion-android-search"></button>
                </div>
            </div>
            @*@Html.TextBox("Fecha2", null, new { id = "reservation2", @class = "form-control pull-right", @name = "value_from_start_date" })*@
        </div>
        <div class="col-lg-2 col-xs-12 pull-right">
            <a class="btn btn-success ion ion-stats-bars pull-right" data-target="#modal-crear" data-toggle="modal" href="/ActivosPasivos/Create"> Nuevo Movimiento</a>
        </div>
    </div>
}

<div class="box-header row">
    <a class="btn btn-info fa fa-file-pdf-o pull-right col-lg-2 col-sm-12" href="/ActivosPasivos/pdf"> Descargar Pdf</a>
</div>

<div class="row">

    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="ion ion-stats-bars"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Movimientos: @ViewBag.Movimientos</span>
                <span class="info-box-number"> @ViewBag.Fecha</span>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-green"><i class="ion ion-arrow-graph-up-right"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Ingresos</span>
                <span class="info-box-number">₡ @ViewBag.Ingreso</span>
            </div>
        </div>
    </div>

    <div class="clearfix visible-sm-block"></div>

    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-red"><i class="ion ion-arrow-graph-down-right"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Gastos</span>
                <span class="info-box-number">₡ @ViewBag.Gasto</span>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="ion ion-ios-pie"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Total</span>
                <span class="info-box-number">₡ @ViewBag.Total</span>
            </div>
        </div>
    </div>

</div>


