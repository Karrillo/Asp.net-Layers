@model IEnumerable<SantaMarta.Data.Models.AssetsLiabilities.AssetsLiabilities>

@{
    ViewBag.Title = "Movimientos";
}

@section Menu {
    @Scripts.Render("~/scripts/Tables/Data/menu")
    @*@Scripts.Render("~/Scripts/Forms/Advanced/menu")*@
}

@Styles.Render("~/AdminPacket/plugins/datatables/css")
@*@Styles.Render("~/AdminPacket/plugins/daterangepicker/css")
@Styles.Render("~/AdminPacket/plugins/colorpicker/css")
@Styles.Render("~/AdminPacket/plugins/timepicker/css")
@Styles.Render("~/AdminPacket/plugins/select2/css")
@Styles.Render("~/AdminPacket/dist/css")
