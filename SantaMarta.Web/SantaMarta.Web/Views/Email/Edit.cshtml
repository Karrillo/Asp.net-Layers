@model SantaMarta.Data.Models.Mails.Mails
@{
    Layout = null;
    ViewBag.Title = "Edit";
}
@*modal*@
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Modificar Correo Electronico</h4>
</div>
<div class="modal-body">
    @using (Ajax.BeginForm("Edit", "Email", null, new AjaxOptions
    {
        HttpMethod = "POST",
        Url = Url.Action("Edit", "Email"),
        UpdateTargetId = "modal-content",
        OnSuccess = "closeModalEdit",
        InsertionMode = InsertionMode.Replace

    },
       new { @class = "form-horizontal", role = "form", id = "frmEdit" }))
    {

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="box-body">
            Correo:
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Nombre", id = "name", maxlength = "50" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", id = "nameValidation" })
            <br />
            Clave:
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", Type = "text", placeholder = "Nombre", id = "name", maxlength = "15" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", id = "nameValidation" })
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    }
</div>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
